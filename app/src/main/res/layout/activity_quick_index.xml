<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_qucik_index"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.liuhaoyuan.customviewdemo.QuickIndexActivity">

    <ListView
        android:id="@+id/lv_index"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        ></ListView>

    <com.example.liuhaoyuan.customviewdemo.view.QuickIndexBar
        android:id="@+id/quick_index_bar"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:background="@drawable/quick_index_toast"
        android:text="A"
        android:gravity="center"
        android:textAlignment="center"
        android:id="@+id/tv_current_word"
        android:textColor="@android:color/white"
        android:textSize="50sp" />
</RelativeLayout>
